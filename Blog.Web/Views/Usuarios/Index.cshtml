@model IEnumerable<Blog.Dominio.Model.Usuario>

@{
    ViewBag.Title = "Usuários";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Criar Novo Usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UsuarioID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.UsuarioID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.UsuarioID })
        </td>
    </tr>
}

</table>
